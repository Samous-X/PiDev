                    <div class="col-sm-3" align="center">
                        <input type="text" name="titre" id="titre" class="form-control" placeholder="titre">
                    </div>

                    <div class="col-3">
                        <button type="submit" name="rechercher" value="Rechercher" class="btn btn-primary">Rechercher</button>
                    </div>
                </form>
            </div>
            <br>
            <br>
            <br>
            <br>
            <!-- course list -->
            <div class="row justify-content-center">
                <!-- course item -->
                {% for a in event %}
                    <div class="col-lg-4 col-sm-6 mb-5">
                        <div class="card p-0 border-primary rounded-0 hover-shadow">

                            <div class="card-body">
                                <ul class="list-inline mb-2">







                                     <li class="list-inline-item"><i class="ti-calendar mr-1 text-color"></i>{{ a.dateevent|date("m-d-Y")}}</li>

                                    <li class="list-inline-item"><i class="ti-alarm-clock mr-1 text-color"></i>{{ a.heuredebut|date("h:m")}}</li>
                                    <li class="list-inline-item"><i class="ti-alarm-clock mr-1 text-color"></i>{{ a.heurefin|date("h:m")}}</li>
                                    <a href="{{ path('favoris_Ajout',{'id':a.id}) }}"class="ti-star lg mr-1 " style="margin-left: 60px"></a>

                                </ul>

                                <a href="course-single.html">
                                    <h3  class="card-title" style="margin-left: 60px;">{{ a.titre}} </h3>
                                </a>
                                <p class="card-text mb-4">{{ a.description}}</p>
                                <br>
                                <br>

                                <li class="list-inline-item">Prix: <i class="text-color" >{{ a.prix}}</i> dt</li>
                                <span class="label label-primary label-mini" style="margin-left:250px ">{{ a.idType.typeEvent}}</span>

                                <hr> <a href="{{ path('participation_Ajout',{'id':a.id}) }}" class="click-btn btn btn-default">Apply now</a>


                            </div>
                        </div>
                    </div>


                {% endfor %}




                <!-- course item -->

            </div>
