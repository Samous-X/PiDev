        <div class="content-panel" style="width: 1250px; height: 450px;">
            <h4><i class="fa fa-angle-right"></i>Liste des evenements</h4>
            <section id="unseen">
                <table id="myTable" class="table table-striped table-advance table-hover">

                    <thead>
                    <tr>
                        <th class="numeric">Titre</th>

                        <th class="numeric">Description</th>
                        <th class="numeric">Date evenement</th>
                        <th class="numeric">Heure debut</th>
                        <th class="numeric">Heure fin</th>
                        <th class="numeric">Prix</th>
                        <th class="numeric">Type</th>
                        <th class="numeric">supprimer</th>
                        <th class="numeric ">modifier</th>
                        <th class="numeric ">participant</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for a in event %}
                        <tr>

                            <td>{{ a.titre}}</td>

                            <td>{{ a.description}}</td>
                            <td>{{ a.dateevent|date("m/d/Y")}}</td>
                            <td ><span class="label label-success label-mini">{{ a.heuredebut|date("h:i a")}}</span></td>
                            <td><span class="label label-warning label-mini">{{ a.heurefin|date("h:i a")}}</span></td>
                            <td >{{ a.prix}}</td>
                            <td >{{ a.idType.typeEvent}}</td>
                            <td><a class="btn btn-danger btn-xs" href="{{ path('event_Supprime',{'id':a.id}) }}">Supprimer <i class="fa fa-trash-o"></i></a></td>
                            <td><a class="btn btn-primary btn-xs" href="{{ path('event_Modifier',{'id':a.id}) }}">Modifier <i class="fa fa-pencil"></i></a> </td>
                            <td><a class="btn btn-success btn-xs" href="{{ path('facture2',{'id':a.id}) }}">Imprimer <i class="fa fa-print"></i></a> </td>

                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </section>
        </div>
